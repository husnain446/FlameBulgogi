<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ProgressDialogTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

  <!--  <style name="ProgressBarTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>-->

    <style name="CropTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <!-- TextView style-->

    <style name="TextViewMini">
        <item name="android:textSize">@dimen/text_size_mini</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!--Dark TextView Style-->
    <style name="TextViewSmallOrange" parent="TextViewSmall">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewNormalOrange" parent="TextViewNormal">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewMediumOrange" parent="TextViewMedium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewLargeOrange" parent="TextViewLarge">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--White TextView Style-->
    <style name="TextViewSmallWhite" parent="TextViewSmall">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewNormalWhite" parent="TextViewNormal">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewMediumWhite" parent="TextViewMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewLargeWhite" parent="TextViewLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Dark TextView Style-->
    <style name="TextViewSmallDark" parent="TextViewSmall">
        <item name="android:textColor">@color/colorTextViewPrimary</item>
    </style>

    <style name="TextViewNormalDark" parent="TextViewNormal">
        <item name="android:textColor">@color/colorTextViewPrimary</item>
    </style>

    <style name="TextViewMediumDark" parent="TextViewMedium">
        <item name="android:textColor">@color/colorTextViewPrimary</item>
    </style>

    <style name="TextViewLargeDark" parent="TextViewLarge">
        <item name="android:textColor">@color/colorTextViewPrimary</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--EditText Style-->
    <style name="EditText">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/normal_size</item>
        <item name="font_type">font_semi_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:digits">@string/allowed_digits_space</item>
    </style>

    <style name="PrimaryColorButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/medium_size</item>
        <item name="font_type">font_bold</item>
        <item name="android:background">@drawable/drawable_primary_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorLightRed</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


</resources>
